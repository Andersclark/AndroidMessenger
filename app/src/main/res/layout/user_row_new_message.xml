<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_row_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:contentDescription="user profile image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/user_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:contentDescription="user name"
        android:text="Username"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/user_row_image"
        app:layout_constraintStart_toEndOf="@+id/user_row_image"
        app:layout_constraintTop_toTopOf="@+id/user_row_image" />
</androidx.constraintlayout.widget.ConstraintLayout>